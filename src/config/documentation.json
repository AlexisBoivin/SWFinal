      "get": {
        "description": "Retourne la liste des tâches de l'utilisateur actif.",
        "summary": "Liste des tâches.",
        "tags": [
          "Tâches"
        ],
        "parameters": [
          {
            "name": "Clé d'Api",
            "in": "header",
            "description": "Clé de l'utilisateur autorisant l'utilisation de l'API.",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Succès.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "titre": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "datedebut": {
                      "type": "date"
                    },
                    "dateecheance": {
                      "type": "date"
                    },
                    "complete": {
                      "type": "integer"
                    }
                  }
                }
              }
